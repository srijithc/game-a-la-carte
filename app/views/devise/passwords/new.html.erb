<h3 class="heading font-weight-normal">Forgot your password?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "input-form" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

    <%= label_tag "user[email]", "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3"  %>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block mb-3" %>
  </div>

  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


