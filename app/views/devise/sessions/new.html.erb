<h3 class="heading font-weight-normal">Please sign in</h3>

<%= form_for(resource, {as: resource_name, url: session_path(resource_name), html: {class: "input-form"}}) do |f| %>

  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: "Email Address" %>

  <%= f.label :password, class: "form-label" %>
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3", placeholder: "Password" %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div class="">
    <%= render "devise/shared/links" %>
  </div>

<% end %>